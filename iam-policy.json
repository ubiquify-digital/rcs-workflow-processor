{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "VideoProcessingS3Access",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:GetObjectVersion"
      ],
      "Resource": [
        "arn:aws:s3:::your-input-bucket/*",
        "arn:aws:s3:::your-input-bucket-2/*"
      ]
    },
    {
      "Sid": "VideoProcessingS3Upload",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl"
      ],
      "Resource": [
        "arn:aws:s3:::your-output-bucket/*",
        "arn:aws:s3:::your-output-bucket-2/*"
      ]
    },
    {
      "Sid": "VideoProcessingS3List",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::your-input-bucket",
        "arn:aws:s3:::your-input-bucket-2",
        "arn:aws:s3:::your-output-bucket",
        "arn:aws:s3:::your-output-bucket-2"
      ]
    }
  ]
}
